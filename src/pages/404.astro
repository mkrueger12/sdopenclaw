---
import { Image } from "astro:assets";
import lobsterLogo from "../assets/images/lobster-logo.png";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Page Not Found — OpenClaw SD Weekend</title>
    <meta name="description" content="This page doesn't exist. Head back to the OpenClaw SD Weekend homepage." />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
    <meta name="theme-color" content="#D4520A" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Red+Hat+Display:wght@700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="page-shell">
      <header class="site-header">
        <div class="container header-row">
          <a href="/" class="brand" style="text-decoration:none">
            <Image src={lobsterLogo} alt="" class="brand-logo" width={64} height={64} format="webp" quality={80} />
            <span class="brand-text">Open<span class="accent">Claw</span> SD</span>
          </a>
        </div>
      </header>

      <main class="section" style="min-height:60vh;display:flex;align-items:center">
        <div class="container" style="text-align:center">
          <p class="eyebrow">404</p>
          <h1 style="max-width:none">Page not <span class="accent">found</span></h1>
          <p class="section-lead" style="margin:0 auto var(--space-xl)">
            This page doesn't exist — but the weekend does.
          </p>
          <a href="/" class="btn btn-primary">Back to Home &rarr;</a>
        </div>
      </main>

      <footer class="site-footer">
        <div class="container">
          <p class="brand">Open<span class="accent">Claw</span> SD</p>
        </div>
      </footer>
    </div>
  </body>
</html>
