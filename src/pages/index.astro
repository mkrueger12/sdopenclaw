---
import "../styles/global.css";

const weekend = {
  title: "OpenClaw SD Weekend",
  dates: "February 28 - March 1, 2026",
  location: "San Diego, California",
  summary:
    "A weekend for builders shipping with OpenClaw in San Diego. Meetups, build sessions, and hackathons."
};

const communities = [
  {
    name: "AI Tinkerers",
    logo: "/logos/ai-tinkerers.svg",
    tagline: "The builders' room",
    description:
      "A global community of engineers, researchers, and founders shipping AI in production. 203+ cities worldwide.",
    url: "https://san-diego.aitinkerers.org/",
    accent: "#2563eb"
  },
  {
    name: "DEVxSD",
    logo: "/logos/DEVxIcon128.png",
    tagline: "San Diego's developer community",
    description:
      "A developer community of events and open-source projects in San Diego. Monthly meetups, talks, and hands-on coding for all skill levels.",
    url: "https://devx.network",
    accent: "#7770ff"
  },
  {
    name: "SDx",
    logo: "/logos/sdxcommunity_logo.jpeg",
    tagline: "San Diego's AI builders",
    description:
      "The next-gen startup community for AI builders. 1000+ members, 50+ events, 15+ startups launched.",
    url: "https://www.sdx.community/",
    accent: "#FF4F00"
  }
];

const sponsors = [
  {
    name: "Mercury",
    logo: "/logos/download.png",
    description: "The banking platform built for startups and founders. Trusted by 200,000+ companies.",
    url: "https://mercury.com/",
    accent: "#1C1C3A"
  },
  {
    name: "Cadre AI",
    logo: "/logos/cadreai.webp",
    description: "AI strategy and implementation consultancy. Less hype, more execution.",
    url: "https://www.cadreai.com/",
    accent: "#db4545"
  },
  {
    name: "Clinically AI",
    logo: "/logos/clinically_Ai_logo.png",
    description: "The intelligence platform for behavioral health.",
    url: "https://www.clinicalnotes.ai/",
    accent: "#9900ff"
  }
];

const organizers = [
  {
    name: "Max Krueger",
    photo: "/organizers/Headshots/Max.jpeg",
    org: "Backland Labs",
    orgUrl: "https://www.backlandlabs.io/",
    bio: "AI consulting and workflow automation. Runs builder events across San Diego.",
    accent: "#111111"
  },
  {
    name: "Travis Johnson",
    photo: "/organizers/Headshots/Travis.jpeg",
    org: "AuraPath",
    orgUrl: "https://www.aurapath.us/",
    bio: "AI implementation consulting. Building custom AI solutions that actually work.",
    accent: "#111111"
  },
  {
    name: "Chad Lorhil",
    photo: "/organizers/Headshots/Chad.jpeg",
    org: "SDx / Cadre AI",
    orgUrl: "https://www.sdx.community/",
    bio: "Building San Diego's next-gen AI community. Strategy and execution for builders.",
    accent: "#FF4F00"
  },
  {
    name: "Sam Holmes",
    photo: "/organizers/Headshots/Sam.jpeg",
    org: "DEVxSD",
    orgUrl: "https://devx.network",
    bio: "Developer community organizer. Events, open-source, and hands-on coding in San Diego.",
    accent: "#7770ff"
  }
];

const brandName = (name: string) =>
  name.replace(/DEVxSD/g, 'DEV<span class="lowercase">x</span>SD');

const events = [
  {
    title: "DEVxSD Claw Club",
    when: "Friday, February 27 - 6:00 PM - 10:00 PM",
    where: "1495 Pacific Hwy #300, San Diego, CA 92101",
    description:
      "Join the Claw Club and get your OpenClaw journey started. A hands-on workshop covering setup, hosting, models, channels, and everything you need to hit the ground running. By the end of the night, you'll have the power of OpenClaw at your fingertips.",
    status: "Confirmed",
    signupLabel: "RSVP on DEVx",
    signupUrl: "https://devx.network/events/evt-Dzpa16BGEiR3NGk"
  },
  {
    title: "AI Tinkerers Global Unhackathon",
    when: "Saturday, February 28 - 1:00 PM - 6:00 PM",
    where: "Rancho Bernardo, San Diego",
    description:
      "A synchronized build session across 24 AI Tinkerers cities worldwide. Hands-on coding with OpenClaw/ClawdBot -- no pitches, no panels. Pizza, snacks, and drinks provided. Mac Mini giveaway for the best hack.",
    status: "Confirmed",
    signupLabel: "RSVP on AI Tinkerers",
    signupUrl: "https://san-diego.aitinkerers.org/p/openclaw-global-unhackathon-san-diego"
  },
  {
    title: "OpenClaw Deep Dives & Workshops",
    when: "Sunday, March 1 - 10:00 AM - 1:00 PM",
    where: "Sorrento Valley, San Diego",
    description:
      "Parallel workshop tracks: Advanced Agent Design (memory, orchestration), Business Automation (non-technical), and Security & Compliance (best practices for protecting your setup). Hosted by Cadre with SDx, DEVx, and AI Tinkerers.",
    status: "Pending",
    signupLabel: "Coming soon",
    signupUrl: ""
  },
  {
    title: "SDx OpenClaw Showcase",
    when: "Sunday, March 1 - 2:00 PM - 5:00 PM",
    where: "Sorrento Valley, San Diego",
    description:
      "Show-and-tell for builders and claw-curious. Five-minute demos, real stories, no pitches. Mac Mini giveaway for the best showcase. Food and drinks provided.",
    status: "Confirmed",
    signupLabel: "RSVP on Luma",
    signupUrl: "https://luma.com/OpenclawSd"
  }
];

// Group events by day for timeline display
const eventsByDay = new Map();
for (const event of events) {
  const day = event.when.split(" - ")[0];
  if (!eventsByDay.has(day)) {
    eventsByDay.set(day, []);
  }
  eventsByDay.get(day).push(event);
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{weekend.title}</title>
    <meta name="description" content="A weekend for builders shipping with OpenClaw in San Diego. Meetups, build sessions, and hackathons." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=DM+Sans:wght@400;500;600;700&family=Red+Hat+Display:wght@700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="page-shell">
      <header class="site-header">
        <div class="container header-row">
          <p class="brand"><span class="accent">Open</span>Claw SD</p>
          <nav aria-label="Section navigation" class="top-nav">
            <a href="#about">About</a>
            <a href="#events">Events</a>
            <a href="#communities">Communities</a>
            <a href="#sponsors">Sponsors</a>
          </nav>
        </div>
      </header>

      <main>
        <section class="hero">
          <div class="hero-bg" aria-hidden="true">
            <img src="/images/lobster_modified (2).png" alt="" class="hero-bg-img" />
            <div class="hero-bg-grain"></div>
          </div>

          <div class="hero-content container">
            <div class="hero-headline">
              <p class="hero-headline-location">San Diego</p>
              <h1 class="hero-headline-title"><span class="accent">OpenClaw</span><br />Weekend</h1>
            </div>
            <div class="hero-card">
              <p class="hero-card-date">Feb 28 &ndash; Mar 1, 2026</p>
              <p class="hero-card-desc">{weekend.summary}</p>
              <div class="hero-card-divider" aria-hidden="true"></div>
              <div class="hero-actions">
                <a class="btn btn-primary" href="#events">Explore Events</a>
                <a class="btn btn-ghost" href="#communities">Communities</a>
              </div>
            </div>
          </div>

          <div class="hero-scroll-hint" aria-hidden="true">
            <span></span>
          </div>
        </section>

        <section id="about" class="section">
          <div class="container about-layout">
            <div class="about-text">
              <div class="section-heading">
                <p class="eyebrow">What is this</p>
                <h2>A weekend to <span class="accent">build</span> with OpenClaw</h2>
              </div>
              <p class="section-lead">
                San Diego builders getting together to ship with OpenClaw. Skills, plugins, workflows, integrations -- bring a project or start one here.
              </p>
              <ul class="about-points">
                <li>Hands-on sessions for first-time and experienced builders.</li>
                <li>No pitches. Just building.</li>
              </ul>
            </div>
            <div class="about-image">
              <div class="about-image-frame glass-card">
                <img src="/images/lobsterbuilders.webp" alt="Lobster builders working at their desks" />
              </div>
            </div>
          </div>
        </section>

        <section id="events" class="section section-events">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Events</p>
              <h2>Weekend <span class="accent">schedule</span></h2>
            </div>

            <div class="event-timeline">
              {
                Array.from(eventsByDay.entries()).map(([day, dayEvents]) => (
                  <div class="timeline-day-group">
                    <h3 class="timeline-day">{day}</h3>
                    {dayEvents.map((event) => (
                      <article class="event-card glass-card">
                        <div class="event-header">
                          <div class="event-header-text">
                            <h3 set:html={brandName(event.title)} />
                            <span class={`status ${event.status === "Confirmed" ? "ok" : "pending"}`}>
                              {event.status}
                            </span>
                          </div>
                        </div>

                        <div class="event-details">
                          <div class="event-meta-badges">
                            <span class="event-badge event-badge--time">{event.when.split(" - ").slice(1).join(" - ")}</span>
                            <span class="event-badge event-badge--location">{event.where}</span>
                          </div>
                          <p class="event-description">{event.description}</p>
                        </div>

                        <div class="event-footer">
                          {
                            event.signupUrl ? (
                              <a href={event.signupUrl} class="btn btn-primary event-cta" target="_blank" rel="noopener noreferrer">{event.signupLabel}</a>
                            ) : (
                              <p class="event-placeholder"><strong>Signup:</strong> {event.signupLabel}</p>
                            )
                          }
                        </div>
                      </article>
                    ))}
                  </div>
                ))
              }
            </div>
          </div>
        </section>

        <section id="communities" class="section">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Who's involved</p>
              <h2>Participating <span class="accent">communities</span></h2>
            </div>
            <div class="community-grid">
              {
                communities.map((c) => (
                  <a href={c.url} target="_blank" rel="noopener noreferrer" class="community-card glass-card" style={`--card-accent: ${c.accent}`}>
                    <div class="community-logo">
                      <img src={c.logo} alt={`${c.name} logo`} onerror={`this.style.display='none';this.nextElementSibling.style.display='flex'`} />
                      <span class="logo-fallback" style={`display:none;background:${c.accent}`} aria-hidden="true">{c.name[0]}</span>
                    </div>
                    <div class="community-info">
                      <h3 set:html={brandName(c.name)} />
                      <p class="community-tagline">{c.tagline}</p>
                      <p class="community-desc">{c.description}</p>
                    </div>
                    <span class="community-arrow" aria-hidden="true">&rarr;</span>
                  </a>
                ))
              }
            </div>
          </div>
        </section>

        <section id="sponsors" class="section section-sponsors">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Thank you</p>
              <h2>Weekend <span class="accent">sponsors</span></h2>
            </div>
            <div class="sponsor-grid">
              {
                sponsors.map((s) => (
                  <a href={s.url} target="_blank" rel="noopener noreferrer" class="sponsor-card glass-card" style={`--card-accent: ${s.accent}`}>
                    <div class="sponsor-logo">
                      <img src={s.logo} alt={`${s.name} logo`} onerror={`this.style.display='none';this.nextElementSibling.style.display='flex'`} />
                      <span class="logo-fallback" style={`display:none;background:${s.accent}`} aria-hidden="true">{s.name[0]}</span>
                    </div>
                    <div class="sponsor-info">
                      <h3>{s.name}</h3>
                      <p>{s.description}</p>
                    </div>
                  </a>
                ))
              }
            </div>
          </div>
        </section>

        <section id="organizers" class="section">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">The people</p>
              <h2>Weekend <span class="accent">organizers</span></h2>
            </div>

            <div class="organizer-grid">
              {
                organizers.map((o) => (
                  <div class="person-card glass-card" style={`--card-accent: ${o.accent}`}>
                    <div class="person-photo">
                      <img src={o.photo} alt={o.name} onerror={`this.style.display='none';this.nextElementSibling.style.display='flex'`} />
                      <span class="person-photo-fallback" style={`display:none;background:${o.accent}`} aria-hidden="true">{o.name.split(' ').map(n => n[0]).join('')}</span>
                    </div>
                    <div class="person-info">
                      <h3>{o.name}</h3>
                      <a href={o.orgUrl} target="_blank" rel="noopener noreferrer" class="person-org" set:html={brandName(o.org)} />
                      <p class="person-bio">{o.bio}</p>
                    </div>
                  </div>
                ))
              }
            </div>

          </div>
        </section>
      </main>

      <footer class="site-footer">
        <div class="container footer-grid">
          <div class="footer-brand">
            <p class="brand"><span class="accent">Open</span>Claw SD</p>
            <p class="footer-tagline">Built for San Diego builders.</p>
          </div>
          <div class="footer-contact">
            <p class="footer-heading">Questions?</p>
            <a href="mailto:max@backlandlabs.io">max@backlandlabs.io</a>
          </div>
          <div class="footer-lobster">
            <!-- Lobster image placeholder â€” Travis providing -->
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
