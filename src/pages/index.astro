---
import "../styles/global.css";

const weekend = {
  title: "San Diego OpenClaw Weekend",
  dates: "June 12-14, 2026",
  location: "San Diego, California",
  summary:
    "A participant-focused weekend of OpenClaw sessions: meetups, build time, and a community showcase with clear sign-up paths for each event."
};

const events = [
  {
    title: "Friday Kickoff Meetup",
    when: "Friday, June 12 - 6:00 PM",
    where: "North Park Community Space",
    description:
      "Open the weekend with intros, project demos, and team matching for people who want to build together.",
    status: "Confirmed",
    signupLabel: "Reserve Friday spot",
    signupUrl: "https://example.com/openclaw-friday"
  },
  {
    title: "Saturday Build Jam",
    when: "Saturday, June 13 - Time TBD",
    where: "Location TBD",
    description:
      "Hands-on OpenClaw build sessions with mentors, stations, and collaborative problem-solving.",
    status: "Details pending",
    signupLabel: "Sign-up link coming soon",
    signupUrl: null
  },
  {
    title: "Sunday Community Showcase",
    when: "Sunday, June 14 - 11:00 AM",
    where: "Waterfront Innovation Hall",
    description:
      "Share what you built, learn from other participants, and connect with the local OpenClaw community.",
    status: "Confirmed",
    signupLabel: "Join Sunday showcase",
    signupUrl: "https://example.com/openclaw-sunday"
  }
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{weekend.title}</title>
    <meta name="description" content="San Diego OpenClaw Weekend events and sign-up links." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@400;500;600&family=Sora:wght@500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="page-shell">
      <header class="site-header">
        <div class="container header-row">
          <p class="brand">OpenClaw San Diego</p>
          <nav aria-label="Section navigation" class="top-nav">
            <a href="#about">What is Happening</a>
            <a href="#events">Events</a>
            <a href="#signup">Sign Up</a>
          </nav>
        </div>
      </header>

      <main>
        <section class="hero">
          <div class="container hero-grid">
            <div>
              <p class="eyebrow">Weekend landing page</p>
              <h1>{weekend.title}</h1>
              <p class="hero-lead">{weekend.summary}</p>
              <div class="hero-meta">
                <p><strong>Dates:</strong> {weekend.dates}</p>
                <p><strong>Location:</strong> {weekend.location}</p>
              </div>
              <div class="hero-actions">
                <a class="btn btn-primary" href="#events">Explore events</a>
                <a class="btn btn-secondary" href="#signup">How to sign up</a>
              </div>
            </div>
            <aside class="hero-note" aria-label="Participant note">
              <h2>Participant-first format</h2>
              <p>
                This page is optimized for speed and clarity so you can quickly understand each
                event and register without hunting for details.
              </p>
            </aside>
          </div>
        </section>

        <section id="about" class="section">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">What is happening</p>
              <h2>One weekend, multiple OpenClaw experiences</h2>
            </div>
            <p class="section-lead">
              San Diego OpenClaw Weekend brings together builders and curious newcomers for guided
              sessions, collaborative build time, and a community showcase. Every event includes a
              direct sign-up path so participants can plan their weekend quickly.
            </p>
            <ul class="about-points">
              <li>Practical sessions for both first-time and experienced participants.</li>
              <li>Clear event-by-event logistics, with placeholders where details are pending.</li>
              <li>Fast-loading static page in Astro, built for desktop and mobile.</li>
            </ul>
          </div>
        </section>

        <section id="events" class="section section-events">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Events</p>
              <h2>Weekend schedule and sign-up paths</h2>
            </div>

            <div class="event-grid">
              {
                events.map((event) => (
                  <article class="event-card">
                    <div class="event-top">
                      <h3>{event.title}</h3>
                      <span class={`status ${event.status === "Confirmed" ? "ok" : "pending"}`}>
                        {event.status}
                      </span>
                    </div>
                    <p class="event-detail"><strong>When:</strong> {event.when}</p>
                    <p class="event-detail"><strong>Where:</strong> {event.where}</p>
                    <p class="event-description">{event.description}</p>

                    {
                      event.signupUrl ? (
                        <a href={event.signupUrl} class="btn btn-primary event-cta">{event.signupLabel}</a>
                      ) : (
                        <p class="event-placeholder"><strong>Signup:</strong> {event.signupLabel}</p>
                      )
                    }
                  </article>
                ))
              }
            </div>
          </div>
        </section>

        <section id="signup" class="section">
          <div class="container signup-box">
            <div class="section-heading">
              <p class="eyebrow">Sign up</p>
              <h2>How to join the weekend</h2>
            </div>
            <p class="section-lead">
              Use the sign-up action inside each event card above. If a link is still pending,
              the card will be marked clearly so you know exactly what is confirmed and what is
              still being finalized.
            </p>
            <p class="support-note">
              Questions or group registration requests: <a href="mailto:hello@sdopenclaw.org"
                >hello@sdopenclaw.org</a
              >
            </p>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
