// Group events by day for timeline display
const eventsByDay = new Map();
for (const event of events) {
  const day = event.when.split(" - ")[0];
  if (!eventsByDay.has(day)) {
    eventsByDay.set(day, []);
  }
  eventsByDay.get(day).push(event);
}
