---
import "../styles/global.css";

const weekend = {
  title: "OpenClaw SD Weekend",
  dates: "February 28 - March 1, 2026",
  location: "San Diego, California",
  summary:
    "A weekend for builders shipping with OpenClaw in San Diego. Meetups, build sessions, and hackathons."
};

const communities = [
  {
    name: "AI Tinkerers",
    tagline: "The builders' room",
    description:
      "A global community of engineers, researchers, and founders shipping AI in production. 203+ cities worldwide.",
    url: "https://san-diego.aitinkerers.org/",
    accent: "#2563eb"
  },
  {
    name: "SDx",
    tagline: "San Diego's AI builders",
    description:
      "The next-gen startup community for AI builders. 1000+ members, 50+ events, 15+ startups launched.",
    url: "https://www.sdx.community/",
    accent: "#FF4F00"
  }
];

const sponsors = [
  {
    name: "Cadre AI",
    description: "AI strategy and implementation consultancy. Less hype, more execution.",
    url: "https://www.cadreai.com/",
    accent: "#db4545"
  },
  {
    name: "Clinically AI",
    description: "The intelligence platform for behavioral health.",
    url: "https://www.clinicalnotes.ai/",
    accent: "#9900ff"
  }
];

const organizers = [
  {
    name: "Backland Labs",
    description: "AI consulting, workflow automation, and builder events in San Diego.",
    url: "https://www.backlandlabs.io/",
    accent: "#111111"
  },
  {
    name: "AuraPath",
    description: "AI implementation consulting. Custom AI solutions that work.",
    url: "https://www.aurapath.us/",
    accent: "#111111"
  }
];

const events = [
  {
    title: "Claw Club",
    when: "Friday, February 27 - 6:00 PM - 10:00 PM",
    where: "Register to see location",
    description:
      "Everyone's got an OpenClaw crustacean, and it's time you join the club. Workshop focused on getting you set up with your own OpenClaw instance -- hosting, models, channels. By the end, you'll have the Power of the Claw.",
    status: "Confirmed",
    signupLabel: "RSVP on DEVx",
    signupUrl: "https://devx.network/events/evt-Dzpa16BGEiR3NGk"
  },
{
    title: "AI Tinkerers Global Unhackathon",
    when: "Saturday, February 28 - 1:00 PM - 6:00 PM",
    where: "San Diego, CA (address after approval)",
    description:
      "A synchronized build session across 24 AI Tinkerers cities worldwide. Hands-on coding with OpenClaw/ClawdBot -- no pitches, no panels, no prizes. Pizza, snacks, and drinks provided.",
    status: "Confirmed",
    signupLabel: "RSVP on AI Tinkerers",
    signupUrl: "https://san-diego.aitinkerers.org/p/openclaw-global-unhackathon-san-diego"
  },
  {
    title: "SDx OpenClaw Showcase",
    when: "Sunday, March 1 - 2:00 PM to 5:00 PM PST",
    where: "San Diego, CA (address after approval)",
    description:
      "Show-and-tell for builders and claw-curious. Five-minute demos, real stories, no pitches. Mac-mini giveaways! Food & drinks provided.",
    status: "Confirmed",
    signupLabel: "Join Sunday showcase",
    signupUrl: "https://example.com/openclaw-sunday"
  }
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{weekend.title}</title>
    <meta name="description" content="A weekend for builders shipping with OpenClaw in San Diego. Meetups, build sessions, and hackathons." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=DM+Sans:wght@400;500;600;700&family=Red+Hat+Display:wght@700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="page-shell">
      <header class="site-header">
        <div class="container header-row">
          <p class="brand"><span class="accent">Open</span>Claw SD</p>
          <nav aria-label="Section navigation" class="top-nav">
            <a href="#events">Events</a>
            <a href="#communities">Communities</a>
            <a href="#sponsors">Sponsors</a>
          </nav>
        </div>
      </header>

      <main>
        <section class="hero">
          <div class="hero-bg" aria-hidden="true">
            <img src="/images/lobster_modified (2).png" alt="" class="hero-bg-img" />
            <div class="hero-bg-overlay"></div>
            <div class="hero-bg-grain"></div>
          </div>

          <div class="hero-content container">
            <div class="hero-card">
              <div class="hero-card-accent-bar" aria-hidden="true"></div>
              <p class="hero-card-eyebrow">Feb 28 &ndash; Mar 1, 2026 &middot; San Diego</p>
              <h1 class="hero-card-title">San Diego<br /><span class="accent">OpenClaw</span> Weekend</h1>
              <p class="hero-card-desc">{weekend.summary}</p>
              <div class="hero-card-divider" aria-hidden="true"></div>
              <div class="hero-actions">
                <a class="btn btn-primary" href="#events">Explore Events</a>
                <a class="btn btn-ghost" href="#communities">Communities</a>
              </div>
            </div>
          </div>

          <div class="hero-scroll-hint" aria-hidden="true">
            <span></span>
          </div>
        </section>

        <section id="about" class="section">
          <div class="container about-layout">
            <div class="about-text">
              <div class="section-heading">
                <p class="eyebrow">What is this</p>
                <h2>A weekend to <span class="accent">build</span> with OpenClaw</h2>
              </div>
              <p class="section-lead">
                San Diego builders getting together to ship with OpenClaw. Skills, plugins, workflows, integrations -- bring a project or start one here.
              </p>
              <ul class="about-points">
                <li>Hands-on sessions for first-time and experienced builders.</li>
                <li>No pitches. Just building.</li>
              </ul>
            </div>
            <div class="about-image">
              <div class="about-image-frame glass-card">
                <img src="/images/lobsterbuilders.webp" alt="Lobster builders working at their desks" />
              </div>
            </div>
          </div>
        </section>

        <section id="events" class="section section-events">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Events</p>
              <h2>Weekend <span class="accent">schedule</span></h2>
            </div>

            <div class="event-timeline">
              {
                events.map((event) => (
                  <article class="event-card glass-card">
                    <div class="event-header">
                      <div class="event-day-badge">
                        <span class="event-day-label">
                          {event.when.split(",")[0]}
                        </span>
                        <span class="event-day-num">
                          {event.when.match(/\d+/)?.[0] || ""}
                        </span>
                      </div>
                      <div class="event-header-text">
                        <h3>{event.title}</h3>
                        <span class={`status ${event.status === "Confirmed" ? "ok" : "pending"}`}>
                          {event.status}
                        </span>
                      </div>
                    </div>

                    <div class="event-details">
                      <div class="event-meta-badges">
                        <span class="event-badge event-badge--time">{event.when.split(" - ").slice(1).join(" - ")}</span>
                        <span class="event-badge event-badge--location">{event.where}</span>
                      </div>
                      <p class="event-description">{event.description}</p>
                    </div>

                    <div class="event-footer">
                      {
                        event.signupUrl ? (
                          <a href={event.signupUrl} class="btn btn-primary event-cta" target="_blank" rel="noopener noreferrer">{event.signupLabel}</a>
                        ) : (
                          <p class="event-placeholder"><strong>Signup:</strong> {event.signupLabel}</p>
                        )
                      }
                    </div>
                  </article>
                ))
              }
            </div>
          </div>
        </section>

        <section id="communities" class="section">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Who's involved</p>
              <h2>Participating <span class="accent">communities</span></h2>
            </div>
            <div class="community-grid">
              {
                communities.map((c) => (
                  <a href={c.url} target="_blank" rel="noopener noreferrer" class="community-card glass-card" style={`--card-accent: ${c.accent}`}>
                    <div class="community-logo">
                      <img src={`/logos/${c.name.toLowerCase().replace(/\s+/g, "-")}.svg`} alt={`${c.name} logo`} />
                    </div>
                    <div class="community-info">
                      <h3>{c.name}</h3>
                      <p class="community-tagline">{c.tagline}</p>
                      <p class="community-desc">{c.description}</p>
                    </div>
                    <span class="community-arrow" aria-hidden="true">&rarr;</span>
                  </a>
                ))
              }
            </div>
          </div>
        </section>

        <section id="sponsors" class="section section-sponsors">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Thank you</p>
              <h2>Weekend <span class="accent">sponsors</span></h2>
            </div>
            <div class="sponsor-grid">
              {
                sponsors.map((s) => (
                  <a href={s.url} target="_blank" rel="noopener noreferrer" class="sponsor-card glass-card" style={`--card-accent: ${s.accent}`}>
                    <div class="sponsor-logo">
                      <img src={`/logos/${s.name.toLowerCase().replace(/\s+/g, "-")}.svg`} alt={`${s.name} logo`} />
                    </div>
                    <div class="sponsor-info">
                      <h3>{s.name}</h3>
                      <p>{s.description}</p>
                    </div>
                  </a>
                ))
              }
            </div>
          </div>
        </section>

        <section id="organizers" class="section">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Organized by</p>
              <h2>Weekend <span class="accent">organizers</span></h2>
            </div>

            <div class="organizer-grid">
              {
                organizers.map((o) => (
                  <a href={o.url} target="_blank" rel="noopener noreferrer" class="sponsor-card glass-card" style={`--card-accent: ${o.accent}`}>
                    <div class="sponsor-logo">
                      <img src={`/logos/${o.name.toLowerCase().replace(/\s+/g, "-")}.svg`} alt={`${o.name} logo`} />
                    </div>
                    <div class="sponsor-info">
                      <h3>{o.name}</h3>
                      <p>{o.description}</p>
                    </div>
                  </a>
                ))
              }
            </div>

            <p class="support-note">
              Questions? Reach out at <a href="mailto:max@backlandlabs.io">max@backlandlabs.io</a>
            </p>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
