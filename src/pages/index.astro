---
import "../styles/global.css";

const weekend = {
  title: "San Diego OpenClaw Weekend",
  dates: "February 28 - March 1, 2026",
  location: "San Diego, California",
  summary:
    "A weekend for builders shipping with OpenClaw in San Diego. Meetups, build sessions, and hackathons."
};

const communities = [
  {
    name: "AI Tinkerers",
    tagline: "The builders' room",
    description:
      "A global community of engineers, researchers, and founders shipping AI in production. 203+ cities worldwide.",
    url: "https://san-diego.aitinkerers.org/",
    accent: "#2563eb"
  },
  {
    name: "SDx",
    tagline: "San Diego's AI builders",
    description:
      "The next-gen startup community for AI builders. 1000+ members, 50+ events, 15+ startups launched.",
    url: "https://www.sdx.community/",
    accent: "#F26522"
  }
];

const sponsors = [
  {
    name: "Cadre AI",
    description: "AI strategy and implementation consultancy. Less hype, more execution.",
    url: "https://www.cadreai.com/",
    accent: "#db4545"
  },
  {
    name: "Clinically AI",
    description: "The intelligence platform for behavioral health.",
    url: "https://www.clinicalnotes.ai/",
    accent: "#9900ff"
  },
  {
    name: "Backland Labs",
    description: "AI consulting, workflow automation, and builder events in San Diego.",
    url: "https://www.backlandlabs.io/",
    accent: "#111111"
  }
];

const events = [
{
    title: "AI Tinkerers Global Unhackathon",
    when: "Saturday, February 28 - 1:00 PM",
    where: "Register to see location",
    description:
      "A synchronized build session across 24 AI Tinkerers cities worldwide. Hands-on coding with OpenClaw/ClawdBot -- no pitches, no panels, no prizes. Pizza, snacks, and drinks provided.",
    status: "Confirmed",
    signupLabel: "RSVP on AI Tinkerers",
    signupUrl: "https://san-diego.aitinkerers.org/p/openclaw-global-unhackathon-san-diego"
  },
  {
    title: "SDx OpenClaw Showcase",
    when: "Sunday, March 1 - 2:00 PM to 5:00 PM PST",
    where: "San Diego, CA (address after approval)",
    description:
      "Show-and-tell for builders and claw-curious. Five-minute demos, real stories, no pitches. Mac-mini giveaways! Food & drinks provided.",
    status: "Confirmed",
    signupLabel: "Join Sunday showcase",
    signupUrl: "https://example.com/openclaw-sunday"
  }
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{weekend.title}</title>
    <meta name="description" content="A weekend for builders shipping with OpenClaw in San Diego. Meetups, build sessions, and hackathons." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Red+Hat+Display:wght@700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="page-shell">
      <header class="site-header">
        <div class="container header-row">
          <p class="brand"><span class="accent">Open</span>Claw San Diego</p>
          <nav aria-label="Section navigation" class="top-nav">
            <a href="#events">Events</a>
            <a href="#communities">Communities</a>
            <a href="#sponsors">Sponsors</a>
          </nav>
        </div>
      </header>

      <main>
        <section class="hero">
          <div class="container hero-grid">
            <div>
              <p class="eyebrow">February 28 - March 1, 2026</p>
              <h1>San Diego <span class="accent">OpenClaw</span> Weekend</h1>
              <p class="hero-lead">{weekend.summary}</p>
              <div class="hero-meta">
                <p><strong>Dates:</strong> {weekend.dates}</p>
                <p><strong>Location:</strong> {weekend.location}</p>
              </div>
              <div class="hero-actions">
                <a class="btn btn-primary" href="#events">Explore events</a>
                <a class="btn btn-secondary" href="#communities">Communities</a>
              </div>
            </div>
            <aside class="hero-note" aria-label="Builder note">
              <h2>For builders</h2>
              <p>
                This weekend is for people who want to build with OpenClaw, hack on it, and ship things.
              </p>
            </aside>
          </div>
        </section>

        <section id="about" class="section">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">What is this</p>
              <h2>A weekend to <span class="accent">build</span> with OpenClaw</h2>
            </div>
            <p class="section-lead">
              San Diego builders getting together to ship with OpenClaw. Skills, plugins, workflows, integrations -- bring a project or start one here.
            </p>
            <ul class="about-points">
              <li>Hands-on sessions for first-time and experienced builders.</li>
              <li>No pitches. Just building.</li>
            </ul>
          </div>
        </section>

        <section id="events" class="section section-events">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Events</p>
              <h2>Weekend <span class="accent">schedule</span></h2>
            </div>

            <div class="event-grid">
              {
                events.map((event) => (
                  <article class="event-card">
                    <div class="event-top">
                      <h3>{event.title}</h3>
                      <span class={`status ${event.status === "Confirmed" ? "ok" : "pending"}`}>
                        {event.status}
                      </span>
                    </div>
                    <p class="event-detail"><strong>When:</strong> {event.when}</p>
                    <p class="event-detail"><strong>Where:</strong> {event.where}</p>
                    <p class="event-description">{event.description}</p>

                    {
                      event.signupUrl ? (
                        <a href={event.signupUrl} class="btn btn-primary event-cta">{event.signupLabel}</a>
                      ) : (
                        <p class="event-placeholder"><strong>Signup:</strong> {event.signupLabel}</p>
                      )
                    }
                  </article>
                ))
              }
            </div>
          </div>
        </section>

        <section id="communities" class="section">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Who's involved</p>
              <h2>Participating <span class="accent">communities</span></h2>
            </div>
            <p class="section-lead">
              This weekend is organized in collaboration with San Diego's leading builder communities.
            </p>

            <div class="community-grid">
              {
                communities.map((c) => (
                  <a href={c.url} target="_blank" rel="noopener noreferrer" class="community-card" style={`--card-accent: ${c.accent}`}>
                    <div class="community-badge" aria-hidden="true">{c.name.charAt(0)}</div>
                    <div class="community-info">
                      <h3>{c.name}</h3>
                      <p class="community-tagline">{c.tagline}</p>
                      <p class="community-desc">{c.description}</p>
                    </div>
                    <span class="community-arrow" aria-hidden="true">&rarr;</span>
                  </a>
                ))
              }
            </div>
          </div>
        </section>

        <section id="sponsors" class="section section-sponsors">
          <div class="container">
            <div class="section-heading">
              <p class="eyebrow">Thank you</p>
              <h2>Weekend <span class="accent">sponsors</span></h2>
            </div>
            <p class="section-lead">
              This weekend is made possible by organizations that support the San Diego builder community.
            </p>

            <div class="sponsor-grid">
              {
                sponsors.map((s) => (
                  <a href={s.url} target="_blank" rel="noopener noreferrer" class="sponsor-card" style={`--card-accent: ${s.accent}`}>
                    <div class="sponsor-mark" aria-hidden="true">{s.name.charAt(0)}</div>
                    <div class="sponsor-info">
                      <h3>{s.name}</h3>
                      <p>{s.description}</p>
                    </div>
                  </a>
                ))
              }
            </div>

            <div class="sponsor-cta-box">
              <p class="sponsor-cta-text">More sponsor slots available</p>
              <a href="mailto:max@backlandlabs.io" class="btn btn-primary">Become a sponsor</a>
            </div>

            <p class="support-note">
              Questions? Reach out at <a href="mailto:max@backlandlabs.io">max@backlandlabs.io</a>
            </p>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
